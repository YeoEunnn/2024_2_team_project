<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CategoryManagement">


    <TextView
        android:id="@+id/title_CategoryManagement"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#32C8B2CB"
        android:fontFamily="@font/noto_med"
        android:gravity="center"
        android:text="카테고리 관리"
        android:textColor="#000000"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/inLoginActBackPress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/title_CategoryManagement"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_press" />

    <EditText
        android:id="@+id/category1"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:paddingStart="20dp"
        app:layout_constraintStart_toEndOf="@+id/inLoginActBackPress"
        app:layout_constraintTop_toBottomOf="@+id/title_CategoryManagement"
        android:background="@drawable/rounded_lightpurplepink"
        android:text="category1"
        android:fontFamily="@font/inria_serif_regular"
        android:elevation="10dp"
        />

    <EditText
        android:id="@+id/category2"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:paddingStart="20dp"
        app:layout_constraintStart_toEndOf="@+id/inLoginActBackPress"
        app:layout_constraintTop_toBottomOf="@+id/category1"
        android:background="@drawable/rounded_yeon_purple"
        android:text="category1"
        android:fontFamily="@font/inria_serif_regular"
        android:elevation="10dp"
        />

    <EditText
        android:id="@+id/category3"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:paddingStart="20dp"
        app:layout_constraintStart_toEndOf="@+id/inLoginActBackPress"
        app:layout_constraintTop_toBottomOf="@+id/category2"
        android:background="@drawable/rounded_grayish_yellow"
        android:text="category1"
        android:fontFamily="@font/inria_serif_regular"
        android:elevation="10dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>